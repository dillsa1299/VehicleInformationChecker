<MudPaper Style="@_style" Class="pa-4 d-flex flex-column align-center justify-center" Elevation="1" Height="50%">
    <MudText Align="Align.Center" Typo="Typo.h4"><b>Tax Status</b></MudText>
    <br />
    <MudText Align="Align.Center" Typo="Typo.h4">@Vehicle?.TaxStatus</MudText>

    @if (Vehicle?.TaxDueDate != null)
    {
        <MudText Align="Align.Center" Typo="Typo.h6">
            @(Vehicle.TaxDueDate.Value < DateOnly.FromDateTime(DateTime.Today) ? "Expired:" : "Expires:") @Vehicle.TaxDueDate
        </MudText>
    }
</MudPaper>