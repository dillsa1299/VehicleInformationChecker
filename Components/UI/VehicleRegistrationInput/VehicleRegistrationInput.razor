<MudGrid>
    <MudItem xs="4"></MudItem>
    <MudItem xs="4" Class="d-flex align-center">

        <EditForm Model="@_registrationInput" OnValidSubmit="SearchRegistrationInput">
            <MudTextField @bind-Value="_registrationInput.Input"
            For="@(() => _registrationInput.Input)"
            Mask="_inputMask"
            Clearable="true"
            Error="@_searchFailed"
            Placeholder="NE14 ABJ"
            Adornment="Adornment.End"
            AdornmentIcon="@Icons.Material.Filled.Search"
            AdornmentColor="@Color.Primary"
            IconSize="Size.Large"
            OnAdornmentClick="SearchRegistrationInput"
            Variant="Variant.Outlined"
            Margin="Margin.Dense"
            Typo="Typo.h2"
            Class="text-upper flex-auto pa-2" />
        </EditForm>
    </MudItem>
    <MudItem xs="4"></MudItem>
</MudGrid>

<!-- Styling would not work in separate CSS file. Probably something to do with MudBlazor -->
<style>
    .text-upper input {
        text-transform: uppercase;
    }
</style>