<MudGrid>
    <MudItem xs="4"></MudItem>
    <MudItem xs="4" Class="d-flex align-center">

        <MudTextField @bind-Value="_vehicleRegistration"
                      Mask="inputMask"
                      Clearable="true"
                      Label="Enter Vehicle Registration"
                      Variant="Variant.Outlined"
                      Margin="Margin.Dense"
                      Typo="Typo.h3"
                      Class="reg-input flex-auto pa-2" />

        @if (_searching)
        {
            <MudProgressCircular Size="Size.Large" Indeterminate="true"/>
        }
        else
        {
            <MudIconButton Icon="@Icons.Material.Filled.Search" Size="Size.Large" OnClick="OnSearchClicked"/>
        }
    </MudItem>
    <MudItem xs="4"></MudItem>
</MudGrid>