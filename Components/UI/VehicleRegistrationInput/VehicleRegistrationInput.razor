<MudGrid>
    <MudItem xs="2"></MudItem>
    <MudItem xs="8" Class="d-flex align-center">
        <MudTextField @bind-Value="_vehicleRegistration"
                      Mask="inputMask"
                      Clearable="true"
                      T="string"
                      Immediate="true"
                      Label="Enter Vehicle Registration"
                      Variant="Variant.Outlined"
                      Margin="Margin.Dense"
                      Typo="Typo.h3"
                      Class="reg-input flex-auto pa-2" />

        <MudButton Disabled="@_searching" OnClick="OnSearchClicked" Variant="Variant.Filled" Color="Color.Success">
            @if (_searching)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
            }
            else
            {
                <MudText>Search</MudText>
            }
        </MudButton>
    </MudItem>
    <MudItem xs="2"></MudItem>
</MudGrid>