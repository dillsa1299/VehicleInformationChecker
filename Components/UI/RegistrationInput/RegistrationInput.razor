<EditForm Model="@_registrationInput" OnValidSubmit="SearchRegistrationInput">
    <MudTextField @bind-Value="_registrationInput.Input"
    For="@(() => _registrationInput.Input)"
    Clearable="true"
    Error="@_searchFailed"
    Placeholder="NE14 ABJ"
    Adornment="Adornment.End"
    AdornmentIcon="@Icons.Material.Filled.Search"
    AdornmentColor="@Color.Primary"
    IconSize="Size.Large"
    OnAdornmentClick="SearchRegistrationInput"
    Variant="Variant.Outlined"
    Margin="Margin.Dense"
    Typo="Typo.h2"
    Class="text-upper flex-auto pa-2 d-flex align-center"
    Style="max-width:400px;"/>
</EditForm>

<!--Styling would not work in separate CSS file-->
<style>
    .text-upper input {
        text-transform: uppercase;
    }
</style>