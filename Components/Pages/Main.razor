@page "/"  
@using VehicleInformationChecker.Components.UI.VehicleRegistrationInput
@using VehicleInformationChecker.Components.UI.VehicleSearchDetails

<PageTitle>VIC</PageTitle>  

<VehicleRegistrationInput></VehicleRegistrationInput>

<VehicleSearchDetails Vehicle="@_vehicle"></VehicleSearchDetails>

<MudPaper Class="pa-16 ma-2" Elevation="1">  
    <MudText Typo="Typo.h5" GutterBottom="true">Aims</MudText>  
    <br />  
    <MudText Typo="Typo.body2">  
    1. Accept vehicle registration input from the user. <br/>  
    2. Send this registration off to the Vehicle Enquiry Service API & MOT History API<br />  
    3. Display the information received into an easily readable format. <br />  
    4. Provide an AI summary of the vehicle  
    </MudText>  
</MudPaper>
